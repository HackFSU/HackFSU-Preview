extends ../template.pug

block append styles
  link(rel="stylesheet", href=`${locals.css}/index.css`)
      
block append scripts
  script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")
  script(src=`${locals.js}/index.js`)

block content
  include partials/mlh-badge.pug
  section.section.main
          
        //- #logo
        //-   img(src=`${locals.img}/hackfsu.png`)

        #main
          .content
            .title
              span H
              span a
              span c
              span k
              span F
              //- span 5
              span.five 
                span 5
                img(src=`${locals.img}/5.svg`)
              span U
              
            .form          
              .selection
                .label I want to be a &hellip;
                .buttons
                  span: a(name="hacker") Hacker
                  span: a(name="volunteer") Volunteer
                  span: a(name="sponsor") Sponsor
                  
              
              input#email(type="email", placeholder="My Email Is ...")
              .submit
                button#submit-button
                  img(src=`${locals.img}/celebration.png`)
                  //- span Submit
            .code
              a#code-of-conduct(href="https://static.mlh.io/docs/mlh-code-of-conduct.pdf") MLH Code of Conduct
          
